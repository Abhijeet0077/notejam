<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: ../wide_layout.pt">

<tal:block metal:fill-slot="current_page">
    <span>Account Settings</span>
</tal:block>

<tal:block metal:fill-slot="content">
    <form class="offset-by-six sign-in" method="POST">
        <label for="regularInput">Current Password</label>
        ${renderer.password("old_password")}
        ${renderer.errorlist("old_password")}
        <label for="regularInput">New Password</label>
        ${renderer.password("password")}
        ${renderer.errorlist("password")}
        <label for="regularInput">Confirm New Password</label>
        ${renderer.password("confirm_password")}
        ${renderer.errorlist("confirm_password")}
        <button type="submit">Save</button>
    </form>
</tal:block>

</html>


