<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: ../wide_layout.pt">

<tal:block metal:fill-slot="current_page">
    <span>Sign In</span>
</tal:block>

<tal:block metal:fill-slot="content">
    <form class="offset-by-six sign-in" method="POST">
        <label for="regularInput">Email</label>
        ${renderer.text("email", size=30)}
        ${renderer.errorlist("email")}
        <label for="regularInput">Password</label>
        ${renderer.password("password")}
        ${renderer.errorlist("password")}
        <button type="submit">Sign In</button>
        <p><a href="${request.route_url('forgot_password')}">Forgot password?</a></p>
    </form>
</tal:block>

</html>
