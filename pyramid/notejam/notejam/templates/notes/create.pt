<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: ../base.pt">

<tal:block metal:fill-slot="current_page">
    <span>Create a note</span>
</tal:block>

<tal:block metal:fill-slot="content">
    <form class="note" method="POST">
        <label for="regularInput">Name</label>
        ${renderer.text("name", size=30)}
        ${renderer.errorlist("name")}
        <label for="regularTextarea">Note</label>
        ${renderer.textarea("text")}
        ${renderer.errorlist("text")}
        <label for="selectList">Select Pad</label>
        ${renderer.select("pad_id", [(p.id, p.name) for p in pads], request.params.get("pad"))}
        <button type="submit">Save</button>
    </form>
</tal:block>

</html>
