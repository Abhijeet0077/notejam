<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: ../base.pt">

<tal:block metal:fill-slot="current_page">
    <span>${pad} (${pad.notes.count()})</span>
</tal:block>

<tal:block metal:fill-slot="content">
    <table class="notes" tal:condition="pad.notes.all()">
        <tr>
            <th class="note">Note <a href="#" class="sort_arrow" >&uarr;</a><a href="#" class="sort_arrow" >&darr;</a></th>
            <th>Pad</th>
            <th class="date">Last modified <a href="#" class="sort_arrow" >&uarr;</a><a href="#" class="sort_arrow" >&darr;</a></th>
        </tr>
        <tr tal:repeat="note pad.notes">
            <td><a href="${request.route_url('view_note', note_id=note.id)}">${note.name}</a></td>
            <td class="pad"><a href="#">${note.pad.name}</a></td>
            <td class="hidden-text date">${note.created_at.strftime('%d.%m.%Y')}</td>
        </tr>
    </table>
    <p class="empty" tal:condition="not pad.notes.all()">You don't have any notes in this pad</p>
    <a href="${request.route_url('create_note')}?pad=${pad.id}" class="button">Create a note</a>
</tal:block>
</html>

