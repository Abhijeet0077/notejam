<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="load: ../base.pt">

<tal:block metal:fill-slot="content">
    <form class="offset-by-six sign-in">
        <label for="regularInput">Email</label>
        <input type="text" id="regularInput">
        <label for="regularInput">Password</label>
        <input type="password" id="regularInput">
        <button type="submit">Sign In</button>
        <p><a href="#">Forgot password?</a></p>
    </form>
</tal:block>

<tal:block metal:fill-slot="pads"></tal:block>


</html>


