{% extends 'base.html.twig' %}
{% block breadcrumbs %}<span>All notes ({{ notes|length }})</span>{% endblock %}
{% block body %}
<table class="notes">
    <tr>
        <th class="note">Note <a href="" class="sort_arrow" >&uarr;</a><a href="#" class="sort_arrow" >&darr;</a></th>
        <th>Pad</th>
        <th class="date">Last modified <a href="#" class="sort_arrow" >&uarr;</a><a href="#" class="sort_arrow" >&darr;</a></th>
    </tr>
    {% for note in notes %}
        <tr>
            <td><a href="{{ path('view_note', {'id': note.id})  }}">{{ note.name }}</a></td>
            <td class="pad">
                {% if note.pad %}
                    <a href="{{ path('view_note', {'id': note.id})  }}">{{ note.pad }}</a>
                {% else %}
                    No pad
                {% endif %}
            </td>
            <td class="hidden-text date">Today at 10:51</td>
        </tr>
    {% endfor %}
</table>
<a href="{{ path('create_note') }}" class="button">Create a note</a>
{% endblock %}
