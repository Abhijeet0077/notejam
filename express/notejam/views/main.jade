extends layout

block content_area
  .three.columns
    h4#logo My pads
    nav
      if pads
          ul
            each pad in pads
                li
                   a(href='/pads/#{pad.id}/edit') #{pad.name}
        else
            p= 'No pads yet'
      hr
      a(href='#') New pad
  .thirteen.columns.content-area
    +render_flash_messages(flash_messages)
    block content
